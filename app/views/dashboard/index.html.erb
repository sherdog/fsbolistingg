<div class="container">
	<h1>Your Listings <small><%= link_to "Add a property", new_listing_path, :class => 'btn btn-default btn-small' %></small></h1>
	<p>Here you can manage your listings, access your favorites and find cool tools to help you sell your property.</p>

	
	<% if @listings.present? %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Property Address</th>
				<th>City/State/Zip</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @listings.each  do |listing| %>
			<tr>
				<td><%= listing.address_1 %> <% if listing.address_2.present? %><br /><%= listing.address_2 %> <% end %></td>
				<td><%= listing.city %>, <%= listing.state %> <%= listing.zipcode %></td>
				<td><i>Added <%= time_ago_in_words(listing.created_at) %> ago</i></td>
				<td width="1"><%= link_to "view", listing_path(listing), :class => 'btn btn-primary btn-mini pull-right' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
		
	<% end %>
</div>