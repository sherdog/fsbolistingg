<div class="container">
	<div class="row">
		<div class="col-lg-12 col-12">
			<h2>Sign up <small>It's free so why the heck not!</small></h2>
			<p>
				Signing up to sell your house is as simple as filling out the form below. We do confirm email addresses, this is to ensure you are a person.
			</p>
		</div>
	</div> 
	<div class="row">
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
	  	<div class="col-lg-12 col-12">
	  		<%= f.error_notification %>
	  	</div>
  	</div>
  	<div class="row">
  		<div class="col-lg-6 ">
  			<div class="row">
  				<div class="col-lg-12 col-12">
		  			<div class="form-group">
			  			<label >Email Address</label>
			  			<%= f.input_field :email, :required => true, :autofocus => true, :class => 'form-control' %>
			  		</div>
			  		<div class="form-group">
			  			<label>Password</label>
			  			<%= f.input_field :password, :required => true, :class => 'form-control' %>
			  		</div>
			  		<div class="form-group">
			  			<label>Password Confirmation</label>
			  			<%= f.input_field :password_confirmation, :required => true, :class => 'form-control' %>
			  		</div>
			  		<div class="form-group">
			  			<%= f.button :submit, "Sign up", :class => 'btn btn-default' %>
			  		</div>
		  		</div>
  			</div>
  		</div>

  		<% end %>
  	</div>

<%= render "users/shared/links" %>

</div>