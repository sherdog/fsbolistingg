<div class="container">
	<div class="row">
		
		<%= content_tag(:div, flash[:error], :class => "alert alert-danger") if flash[:error] %>
		<%= content_tag(:div, flash[:notice], :class => "alert alert-warning") if flash[:notice] %>
		<%= content_tag(:div, flash[:alert], :class => "alert") if flash[:alert] %>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
		
		<div class=" col-lg-6 col-offset-3" style="margin-top:20px;">
			
			<!-- Start Row -->
			<div class="row">
				<h2>Sign in</h2>
				<div class="col-lg-12">
			 		<div class="form-group">
			  			<label for="user_email">Email Address</label>
			    		<%= f.input_field :email, :required => false, :autofocus => true, :class => 'form-control' %>
			  		</div>
			  		<div class="form-group">
			  			<label>Password</label>
			  	 		<%= f.input_field :password, :required => false, :class => 'form-control' %>
			  		</div>
				</div>
			</div>
			<!-- End Row -->


			<!-- Start Row -->
			<div class="row">
			  	<div class="form-group signin-buttons">
			  		<div class="col-lg-6">
					<%= f.button :submit, "Sign in", :class => 'btn btn-default btn-block' %>
					</div>
				    <div class="col-lg-6">
				    	<%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary btn-block' %>
				    </div>
			  	</div>
			</div>
			<!-- End  Row -->
			
			<!-- Start Row -->
	 		<div class="row">
	 		  	<div class="col-lg-12">
	 		  		<div class="form-group">
	 		  			<p class="text-center"><%= link_to "Or, Create an Account", new_registration_path(resource_name) %><br /></p>
	 		  		</div>
	 		  	</div>
	 		</div>
	 		 
		</div>

		<% end %>
	</div>
</div>
