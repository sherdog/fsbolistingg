<div class="container">
	<div class="row">
		<h2>Sign in</h2>
		<%= content_tag(:div, flash[:error], :class => "alert alert-danger") if flash[:error] %>
		<%= content_tag(:div, flash[:notice], :class => "alert alert-warning") if flash[:notice] %>
		<%= content_tag(:div, flash[:alert], :class => "alert") if flash[:alert] %>
		<div class="col-lg-6">
			
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
			
			  <div class="form-group">
			  	<label for="user_email">Email Address</label>
			    <%= f.input_field :email, :required => false, :autofocus => true, :class => 'form-control' %>
			  </div>
			  <div class="form-group">
			  	<label>Password</label>
			  	 <%= f.input_field :password, :required => false, :class => 'form-control' %>
			  </div>
			 
			  <% if devise_mapping.rememberable? -%>
			  <div class="form-group">
		 		<div class="checkbox" >
		 			<label for="user_remember_me"> <%= f.input_field :remember_me, as: :boolean %>Remember Me</label>
		 		</div>
		 	  </div>
	 		  <% end %>
			  <div class="form-group">
			  	<%= f.button :submit, "Sign in", :class => 'btn btn-default' %>
			  </div>
			<% end %>
		</div>
		<div class="col-lg-6">
			<h3 class="text-center">Don't have an account? Well...</h3>
			<p class="text-center" style="margin-top:30px;"><%= link_to 'Create an account', new_user_registration_path, :class => 'btn btn-primary btn-large' %></p>
		</div>
	</div>

	<%= render "users/shared/links" %>

</div>
