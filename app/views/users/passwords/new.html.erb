<div class="container">
	<div class="row">

		<div class="col-lg-6 col-offset-3">
			
				<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
				  <%= f.error_notification %>
				  <div class="row ">
				  		<h2>Forgot your password?</h2>
				  		<div class="col-lg-12 alpha">
				  			
					  			
					  			<div class="form-group">
								  	<label>Enter in your email address</label>
								  	<%= f.input_field :email, :required => true, :autofocus => true, :class => 'form-control' %>
								</div>
								<div class="form-group">
									<%= f.button :submit, "Send me reset password instructions", :class => 'btn btn-primary' %>
								</div>
				  		</div>
				  	</div>
				<% end %>
				<%= render "users/shared/links" %>
		</div>
	</div>

</div>