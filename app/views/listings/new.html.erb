<div class="container">
	<h2>Create your listing</h2>
	<div class="row">
		<div class="col-lg-12">
			<%= simple_form_for @listing, :html => { :class => 'form-horizontal' } do |f| %>
			<div class="form-group">
				<label class="col-lg-2 control-label">Title</label>
				<div class="col-lg-8">
					<%= f.input_field :title, :class => 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<label class="col-lg-2 control-label">Asking Price</label>
				<div class="col-lg-3">
					<%= f.input_field :price, :class => 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<label class="col-lg-2 control-label">Address</label>
				<div class="col-lg-8">
					<%= f.input_field :address_1, :class => 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<label class="col-lg-2 control-label">Address 2</label>
				<div class="col-lg-8">
					<%= f.input_field :address_2, :class => 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-2"> </div>
				<div class="col-lg-4">
					<label class="control-label">City</label><br />
					<%= f.input_field :title, :class => 'form-control' %>
				</div>
				<div class="col-lg-2">
					<label class="control-label">State</label><br />
					<%= f.input_field :state, collection: @states, :selected => "IA", :class => 'form-control' %>
				</div>
				<div class="col-lg-2">
					<label class="control-label">Zipcode</label><br />
					<%= f.input_field :zipcode, :class => 'form-control' %>
				</div>
			</div>


			<div class="form-group">
				<label class="col-lg-2 control-label">Title</label>
				<div class="col-lg-8">
					<%= f.input_field :description, :class => 'form-control' %>
				</div>
			</div>
				
			<% end %>


		</div>
	</div>
</div>